# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hubspot_dashboard"

# HubSpot API Keys (one per region)
# Get your API keys from HubSpot Settings > Integrations > Private Apps
HUBSPOT_API_KEY_US="pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
HUBSPOT_API_KEY_APAC="pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
HUBSPOT_API_KEY_IN="pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
HUBSPOT_API_KEY_JP="pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
HUBSPOT_API_KEY_EU="pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Exchange Rate API
EXCHANGE_RATE_API_KEY="your-api-key-here"
EXCHANGE_RATE_API_URL="https://api.exchangerate-api.com/v4/latest"

# Cron Job Security
# Generate a random secret: openssl rand -base64 32
CRON_SECRET="your-random-secret-key-here"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Feature Flags (for phased rollout)
ENABLE_MOCK_DATA="true"
ENABLE_REAL_HUBSPOT_SYNC="false"

# Logging
LOG_LEVEL="info"

# Optional: Future authentication
# NEXTAUTH_SECRET="your-nextauth-secret"
# NEXTAUTH_URL="http://localhost:3000"
